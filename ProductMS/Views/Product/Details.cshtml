@model Product;
@{
}
<h1>Details</h1>
<form method="post" asp-controller="Product" asp-action="details">
    <div class="mb-3">
        <label htmlFor="name" class="form-label">
            Product Name :
        </label>
        <input type="text"
               asp-for="ProductName"
               class="form-control"
               placeholder=" "
               readonly />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div><div class="mb-3">
        <label htmlFor="name" class="form-label">
            Product Description :
        </label>
        <input type="text"
               asp-for="ProductDescription"
               class="form-control"
               placeholder=" "
               readonly />
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label htmlFor="name" class="form-label">
            Price :
        </label>
        <input type="number"
               asp-for="Price"
               class="form-control"
               placeholder=" "
               readonly />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label htmlFor="name" class="form-label">
            Stock Quantity :
        </label>
        <input type="number"
               asp-for="StockQuantity"
               class="form-control"
               placeholder=" "
               readonly />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>
</form>